<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <link href="~/Css/ValidateForm/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Css/ValidateForm/animate.css" rel="stylesheet" />
    <link href="~/Css/ValidateForm/hamburgers.css" rel="stylesheet" />
    <link href="~/Css/ValidateForm/animsition.css" rel="stylesheet" />
    <link href="~/Css/ValidateForm/select2.css" rel="stylesheet" />
    <link href="~/Css/ValidateForm/util.css" rel="stylesheet" />
    <link href="~/Css/ValidateForm/main.css" rel="stylesheet" />
    @Styles.Render("~/bundles/TemplateStyle")
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Quản Lí Khách Sạn", "DSPhong", "Phongs", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Danh sách Phòng", "DSPhong", "Phongs")</li>
                    <li>@Html.ActionLink("Hóa Đơn", "Index", "HoaDons")</li>
                    <li>@Html.ActionLink("Chi Tiết Hóa Đơn", "index", "ChiTietHDs")</li>
                    <li>@Html.ActionLink("Thuê Phòng", "Index", "PhongThues")</li>
                    <li>@Html.ActionLink("Chi Tiết Thuê", "index", "ChiTietTHues")</li>
                    <li>@Html.ActionLink("Danh Mục Phòng", "Index", "Phongs")</li>
                    <li>@Html.ActionLink("Danh Mục Khách Hàng", "Index", "KhachHangs")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <div class="container">
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/TemplateScript")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)

    
    <script src="~/js/ValidateForm/animsition.js"></script>
    <script src="~/js/ValidateForm/popper.js"></script>
    <script src="~/js/ValidateForm/select2.js"></script>
    <script src="~/js/ValidateForm/main.js"></script>
    <script src="~/js/main-page.js"></script>
</body>
</html>
