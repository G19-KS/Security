@model QuanLiKS.Models.KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    
<div class="container-contact100">    
    <div class="wrap-contact100">
        <div class="contact100-form-title">
            <span class="contact100-form-title-1">
               Thêm 
            </span>

            <span class="contact100-form-title-2">
             Khách Hàng
            </span>
        </div>

        @using (Html.BeginForm("Create", "KhachHangs", FormMethod.Post, new { @class = "contact100-form validate-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="validate-input" data-validate="Chọn loại khách">
            @Html.LabelFor(model => model.MaLoaiKhach, "MaLoaiKhach", new { @class = "label-input100" })
            @Html.DropDownList("MaLoaiKhach", null, new { @class = "form-control input100" })
        </div>

        <div class="wrap-input100 validate-input" data-validate="Nhập tên khách">

            @Html.LabelFor(model => model.TenKhach, htmlAttributes: new { @class = "label-input100" })
            @Html.TextBoxFor(model => model.TenKhach, new { @class = "input100" })
            <span class="focus-input100"></span>
        </div>

        <div class="validate-input">
            <span class="label-input100">Giới tính:</span>
            <select class="form-control" name="GioiTinh">
                @{
                    for (int i = 0; i < 2; i++)
                    {
                    <option value="@i">@i</option>
                        }
                    }
            </select>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Nhập cmnd của khách">

            <span class="label-input100">CMND:</span>
            @Html.TextBoxFor(model => model.CMND, new { @class = "input100" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Nhập địa chỉ của khách">
            <span class="label-input100">Địa chỉ:</span>
            @Html.TextBoxFor(model => model.DiaChi, new { @class = "input100" })
            <span class="focus-input100"></span>
        </div>

        <div class="container-contact100-form-btn">
            <button class="contact100-form-btn">
                <span>
                    Submit
                    <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                </span>
            </button>
        </div>
   }
    </div>
</div>

